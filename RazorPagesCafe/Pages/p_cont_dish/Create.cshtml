@page
@model RazorPagesCafe.Pages.p_cont_dish.CreateModel

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление</h1>

<h4>Содержимое блюда</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContentsOfDish.IdIngredient" class="control-label"></label>
                <select asp-for="ContentsOfDish.IdIngredient" class ="form-control" asp-items="ViewBag.IdIngredient"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContentsOfDish.IdPosition" class="control-label"></label>
                <select asp-for="ContentsOfDish.IdPosition" class ="form-control" asp-items="ViewBag.IdPosition"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContentsOfDish.Quantity" class="control-label"></label>
                <input asp-for="ContentsOfDish.Quantity" class="form-control" />
                <span asp-validation-for="ContentsOfDish.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
