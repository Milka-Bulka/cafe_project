@page
@model RazorPagesCafe.Pages.p_order.CreateModel

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление</h1>

<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Orderr.IdOrder" class="control-label"></label>
                <input asp-for="Orderr.IdOrder" class="form-control" />
                <span asp-validation-for="Orderr.IdOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orderr.IdVisitor" class="control-label"></label>
                <select asp-for="Orderr.IdVisitor" class="form-control" asp-items="ViewBag.IdVisitor"></select>
            </div>
            <div class="form-group">
                <label asp-for="Orderr.NumberOfVisitor" class="control-label"></label>
                <input asp-for="Orderr.NumberOfVisitor" class="form-control" />
                <span asp-validation-for="Orderr.NumberOfVisitor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orderr.OrderTime" class="control-label"></label>
                <input asp-for="Orderr.OrderTime" class="form-control" />
                <span asp-validation-for="Orderr.OrderTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
