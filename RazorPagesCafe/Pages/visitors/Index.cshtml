@page
@model RazorPagesCafe.Pages.visitors.IndexModel

@{
    ViewData["Title"] = "Посетители";
}

<h1>Список всех посетителей</h1>

<p>
    <a asp-page="Create">Регистрация</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].DOfB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].Bonuses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Visitor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOfB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonuses)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdVisitor">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.IdVisitor">Данные</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdVisitor">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
