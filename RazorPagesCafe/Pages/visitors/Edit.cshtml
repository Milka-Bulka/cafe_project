@page
@model RazorPagesCafe.Pages.visitors.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактирование</h1>

<h4>Посетители</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Visitor.IdVisitor" />
            <div class="form-group">
                <label asp-for="Visitor.Name" class="control-label"></label>
                <input asp-for="Visitor.Name" class="form-control" />
                <span asp-validation-for="Visitor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitor.Telephone" class="control-label"></label>
                <input asp-for="Visitor.Telephone" class="form-control" />
                <span asp-validation-for="Visitor.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitor.DOfB" class="control-label"></label>
                <input asp-for="Visitor.DOfB" class="form-control" />
                <span asp-validation-for="Visitor.DOfB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitor.Bonuses" class="control-label"></label>
                <input asp-for="Visitor.Bonuses" class="form-control" />
                <span asp-validation-for="Visitor.Bonuses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
