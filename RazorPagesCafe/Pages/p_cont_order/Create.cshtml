@page
@model RazorPagesCafe.Pages.p_cont_order.CreateModel

@{
    ViewData["Title"] = "Добавление";
}

<h4>Добавление в корзину</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContentsOfOrder.IdOrder" class="control-label"></label>
                <select asp-for="ContentsOfOrder.IdOrder" class="form-control" asp-items="ViewBag.IdOrder"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContentsOfOrder.Comment" class="control-label"></label>
                <input asp-for="ContentsOfOrder.Comment" class="form-control" />
                <span asp-validation-for="ContentsOfOrder.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentsOfOrder.IdPositionNavigation" class="control-label"></label>
                <select asp-for="ContentsOfOrder.IdPosition" class="form-control" asp-items="ViewBag.IdPosition"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
