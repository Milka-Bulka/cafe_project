@page
@model RazorPagesCafe.Pages.p_ingredients.IndexModel

@{
    ViewData["Title"] = "Список";
}

<h1>Список</h1>

<p>
    <a asp-page="Create">Добавление нового ингредиента</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Remainder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ingredient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remainder)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdIngredient">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.IdIngredient">Данные</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdIngredient">Удаление</a>
            </td>
        </tr>
}
    </tbody>
</table>
