@page
@model RazorPagesCafe.Pages.p_ingredients.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<h4>Ингредиент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingredient.IdIngredient" />
            <div class="form-group">
                <label asp-for="Ingredient.Name" class="control-label"></label>
                <input asp-for="Ingredient.Name" class="form-control" />
                <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Calories" class="control-label"></label>
                <input asp-for="Ingredient.Calories" class="form-control" />
                <span asp-validation-for="Ingredient.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Unit" class="control-label"></label>
                <input asp-for="Ingredient.Unit" class="form-control" />
                <span asp-validation-for="Ingredient.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Remainder" class="control-label"></label>
                <input asp-for="Ingredient.Remainder" class="form-control" />
                <span asp-validation-for="Ingredient.Remainder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
